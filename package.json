    "isparta": "4.0.0",
    "leasot": "3.1.2",
    "loopback-boot": "2.16.0",
    "loopback-component-fixtures": "0.0.6",
    "mocha": "2.4.5",
    "mocha-sinon": "latest",
    "nyc": "latest",
    "sinon": "latest",
    "sinon-chai": "latest",
    "supertest": "1.1.0",
    "supertest-as-promised": "2.0.2"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
