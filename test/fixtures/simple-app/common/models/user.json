{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "saltWorkFactor": 1
  },
  "mixins": {
    "GetCurrentUser": true
  },
  "properties": {
    "id": {
      "type": "string",
      "id": true,
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "programs": {
      "type": "hasMany",
      "model": "Program",
      "foreignKey": "userId",
      "through": "Team"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "create"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "currentUser"
    }
  ],
  "methods": {
    "currentUser": {
      "description": "Get the current user.",
      "isStatic": true,
      "http": {
        "path": "/currentUser",
        "verb": "get"
      },
      "returns": {
        "arg": "currentUser",
        "type": "Object",
        "root": true
      }
    }
  }
}
